<div class="card">
  <div class="card-header">
    <h1><%= @task.title %></h1>
  </div>
  <div class="card-body">

<p><%= @task.details %></p>
</div>
<p><%= @task.completed %></p>
<%= link_to "Edit Task", edit_task_path%>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<p><%= link_to "Back to list", tasks_path %></p>
